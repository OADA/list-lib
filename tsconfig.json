{
  "extends": "@tsconfig/node14",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "stripInternal": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["lib", "**/*.spec.ts", "**/*-stub.ts"]
}
